{
  "scripts": {
    "dev:docs": "vuepress dev docs",
    "dev:vue": "vite",
    "build": "vitepress build docs",
    "dev": "concurrently -r \"yarn dev:docs\" \"yarn dev:vue\"",
    "serve": "vitepress serve docs",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "lint:prettier": "prettier --check \"src/**/*\"",
    "lint:eslint": "eslint --ext .js,.ts,.vue ./src",
    "lint:fix": "eslint --fix --ext src/**/*.{vue,less,css} ./src",
    "prettier": "prettier -c --write \"src/**/*\"",
    "tsc": "tsc --noEmit",
    "precommit": "lint-staged && npm run tsc"
  },
  "dependencies": {
    "concurrently": "^6.2.0",
    "vue": "^3.0.11"
  },
  "devDependencies": {
    "@tsword/linter": "^1.0.3",
    "@types/node": "^16.0.0",
    "@vitejs/plugin-vue": "^1.2.4",
    "@vue/compiler-sfc": "^3.0.5",
    "husky": "4.3.0",
    "lint-staged": "^10.5.2",
    "stylus": "^0.54.8",
    "typescript": "^4.3.2",
    "vite": "^2.4.0",
    "vue-tsc": "^0.0.24",
    "vuepress": "^2.0.0-beta.21",
    "vuepress-vite": "^2.0.0-beta.21"
  },
  "lint-staged": {
    "src/**/*.less": "stylelint --syntax less --fix",
    "src/**/*.{js,jsx,ts,tsx,vue}": "eslint --ext .js,.jsx,.ts,.tsx,.vue",
    "src/**/*.{js,jsx,tsx,ts,less,md,json,vue}": [
      "prettier -c --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "node node_modules/@tsword/linter/dist/commitLint"
    }
  }
}
