{
  "compilerOptions": {
  
    "paths": {
      "@": ["./example"],
      "@comps/*": ["./example/components/*"]
    },
    
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "ESNext", "DOM"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es", "build", "dist", "scripts", "jest", "vite"]
 }
